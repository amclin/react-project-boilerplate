{
  "name": "create-amclin-nextjs-app",
  "version": "3.12.13",
  "description": "Boilerplate repo for React apps with CICD pipelines, best practices, and code governance",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/amclin/react-project-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "react",
    "starter",
    "next",
    "next.js"
  ],
  "author": "Anthony McLin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amclin/react-project-boilerplate/issues"
  },
  "homepage": "https://github.com/amclin/react-project-boilerplate#readme",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint --ignore-path .gitignore \"**/*.{jsx,js}\"",
    "lint:prettier": "pretty-quick",
    "pretest": "npm run lint",
    "semantic-release": "npx --package semantic-release@^17.0.4 semantic-release",
    "start": "next start",
    "test": "jest --coverage",
    "test:badges": "jest-coverage-badges"
  },
  "devDependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-angular": "^9.0.1",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/commit-analyzer": "^8.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.0",
    "@semantic-release/npm": "^7.0.0",
    "@testing-library/jest-dom": "^5.0.0",
    "@testing-library/react": "^10.0.1",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link-http": "^1.5.16",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "husky": "^4.0.0",
    "isomorphic-unfetch": "^3.0.0",
    "jest": "^26.0.1",
    "jest-coverage-badges": "^1.1.2",
    "lint-staged": "^10.0.1",
    "next": "^9.2.0",
    "prettier": "^2.0.1",
    "pretty-quick": "^2.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0"
  },
  "files": [
    "/*.js",
    "/helpers/**/*.js",
    "/templates/**/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "bin": {
    "create-amclin-nextjs-app": "./index.js"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/out/",
      "<rootDir>/.next/",
      "<rootDir>/node_modules/",
      "<rootDir>/coverage/",
      "<rootDir>/tmp-*/",
      "/__mocks__/"
    ],
    "coverageReporters": [
      "clover",
      "json",
      "json-summary",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 46.9,
        "functions": 59,
        "lines": 42.9,
        "statements": 42.7
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/",
      "<rootDir>/out/",
      "<rootDir>/coverage/",
      "<rootDir>/tmp-*/"
    ],
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "**/*": [
      "pretty-quick â€” staged",
      "git add"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm"
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "docs",
            "package.json",
            "package-lock.josn",
            "coverage/badge-*.svg"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "browserslist": [
    "node 10"
  ],
  "dependencies": {
    "chalk": "^4.0.0",
    "commander": "^5.0.0",
    "cpy": "^8.1.0",
    "cross-spawn": "7.0.3",
    "deepmerge": "^4.1.1",
    "git-user-name": "^2.0.0",
    "got": "^11.1.2",
    "make-dir": "^3.1.0",
    "promisepipe": "^3.0.0",
    "prompts": "^2.3.2",
    "replace-in-file": "^6.0.0",
    "tar": "^6.0.2",
    "update-check": "^1.5.4",
    "validate-npm-package-name": "^3.0.0"
  }
}
